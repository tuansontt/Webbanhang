@using WebSiteBanHang.Models;
@model IEnumerable<SanPham>

@{
    ViewBag.Title = "SanPham";
    Layout = "~/Views/Layout/Product.cshtml";
}

<div class="col-md-9 product1">
    <div class="bottom-product">
        @foreach (var item in Model.OrderBy(n=>n.DonGia))
        {
            <div class="col-md-4 bottom-cd simpleCart_shelfItem">
                <div class="product-at ">
                    <a href="@Url.RouteUrl("xemsanpham", new { @tensp=item.TenSP,@id = item.MaSP })">
                    <img class="img-responsive" src="@Url.Content("~/Content/HinhAnhSP/" + item.HinhAnh)" alt="" style="width:255px;height:259px">
                    <div class="pro-grid">
                    <span class="buy-in">Đặt Mua</span>
                    </div>
                    </a>
                </div>
                <p class="tun">@item.TenSP</p>
                <a href="#" class="item_add"><p class="number item_price"><i> </i>@item.DonGia.Value.ToString("#,##") VND</p></a>
            </div>
            
        }
        <div class="clearfix"> </div>
    </div>
