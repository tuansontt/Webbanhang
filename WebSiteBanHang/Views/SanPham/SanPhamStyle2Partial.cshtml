@model IEnumerable<WebSiteBanHang.Models.SanPham>


<div class="col-md-6 men">
    <a href="@Url.RouteUrl("xemsanpham",new { @tensp=Model.ElementAt(0).TenSP,@id =Model.ElementAt(0).MaSP})" class="b-link-stripe b-animate-go  thickbox">
        <img class="img-responsive" src="@Url.Content("~/Content/HinhAnhSP/"+Model.ElementAt(0).HinhAnh)" alt="">
